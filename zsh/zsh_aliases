(( $+commands[ptpython] )) && alias ipython=ptipython
alias md='mkdir -p -v'
alias mv='mv -iv'
[[ "$OSTYPE" =~ linux ]] && alias rm='rm -Iv --one-file-system' || alias rm='rm -iv'
alias ..='gcd ..'
alias ...='gcd ../..'
alias ....='gcd ../../..'
alias .....='gcd ../../../..'
alias cd.='gcd ..'
alias cd..='gcd ..'
alias cdr='cd "$(git rev-parse --show-toplevel)"'
alias disable_touch_pad='sudo modprobe -r psmouse'   # 禁用触控板
